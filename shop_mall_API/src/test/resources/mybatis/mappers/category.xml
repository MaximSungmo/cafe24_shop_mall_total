<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="category">


	<resultMap type="categoryvo" id="category_ResultMap"> 
		<id property="no" column="no" /> 
		<result property="name" column="name" /> 
		<result property="parent_no" column="parent_no" /> 
		
		<collection property="product_list" column="no" javaType="java.util.ArrayList" ofType="product_result_map" select="get_product_list"/>
	</resultMap> 
	
	<resultMap type="com.cafe24.shop.vo.ProductVo" id="product_result_map"> 
		<result property="no" column="p_no" /> 
		<result property="name" column="p_name" /> 
		<result property="description" column="p_desc" /> 
		<result property="category_no" column="p_category_no"/>
	</resultMap> 

	<select id="selectTest" resultMap="category_ResultMap"> 
		SELECT C.NO, C.NAME, C.PARENT_NO FROM CATEGORY C
	</select>
	
	<select id="get_product_list" resultMap="product_result_map"> 
		SELECT P.no as p_no, P.name as p_name, P.DESCRIPTION as p_desc, P.category_no as p_category_no FROM PRODUCT P where P.category_no= #{no}
	</select>

	
	
	
	
	<delete id="deleteAll">
		<![CDATA[
			delete from CATEGORY where no > 0
		]]>
	</delete>
	
	<insert id="insert" parameterType="categoryvo">
		<![CDATA[
			insert into CATEGORY 
		    values(null, #{name}, #{parent_no})	
		]]>
		<selectKey keyProperty="no" resultType="long" order="AFTER">
			<![CDATA[
			select last_insert_id()
			]]>
		</selectKey>
	</insert>
	
	<select id="get_category_by_no" parameterType='long' resultType='categoryvo'>
		<![CDATA[
			select no, name from CATEGORY where no=#{no}	
		]]>
	</select>
	
	<select id="get_category_list" resultType='categoryvo'>
		<![CDATA[
			select no, name, parent_no 
			from CATEGORY
		]]>
	</select>
	
	<update id="update_category" parameterType="categoryvo">
		<![CDATA[
			update CATEGORY 
			set name=#{name}, parent_no=#{parent_no}
			where no=#{no} 
		]]>
	</update>
	<update id="update_by_parent_no" parameterType="long">
		<![CDATA[
			update CATEGORY 
			set parent_no=#{update_by_parent_no}
		]]>
	</update>
	
	<delete id="delete_category" parameterType="long">
		<![CDATA[
			delete from CATEGORY where no=#{no} 
		]]>
	</delete>
	
</mapper>
